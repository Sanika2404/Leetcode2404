class Solution {
    public int maximumWealth(int[][] arr) 
    {
        int max=0;
      for(int i=0;i<arr.length;i++)
      {
        int add=0;
        for(int j=0;j<arr[i].length;j++)
        {
            add+=arr[i][j];
        }
      
        if(add>max)
        {
            max=add;
        }
      }
        return max;
       
    }
}
